{{#each results}}
<li class="gallery__item" id={{id}}>
    {{#if poster_path}}
    <img class="gallery__img modal" src=https://www.themoviedb.org/t/p/w500{{poster_path}} alt="{{title}}" />
    {{else}}
    <div class="gallery__img-error modal">Sorry... We don't have poster for this movie &#9785;</div>
    {{/if}}
    <div class="gallery__description modal">
        {{#if title}}
        <p class="gallery__title modal">{{title}}</p>
        {{else if name}}
        <p class="gallery__title modal">{{title}}</p>
        {{/if}}
        <div class='gallery__description-text'>
            <ul class='gallery__description-list modal'>{{#each genre_ids}}
                <li class='gallery__description-item modal'>{{name}}</li>{{/each}}&nbsp;|
            </ul>
            <div>&nbsp;{{#if release_date}} {{release_date}} {{else if first_air_date}} {{first_air_date}}{{/if}}</div>
            <div class='gallery__description-vote'>{{vote_average}}</div>
        </div>
    </div>
</li>
{{/each}}